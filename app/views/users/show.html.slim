- provide(:title, @user.name)

.row
  aside.col-md-4
    section
      = render 'shared/profile'
      = render 'shared/stats'
      = render 'shared/tweet_form' if @user == current_user

  .col-md-8
    - if @user.tweets.any?
      .timeline
        h2.title Tweets
        - if @feed_items.any?
          ol.tweets
            = render partial: 'shared/feed_item', collection: @feed_items
          .paginate = will_paginate @feed_items, renderer: BootstrapPagination::Rails

    - else
      p No post yet
