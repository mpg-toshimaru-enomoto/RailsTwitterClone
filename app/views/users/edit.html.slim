- provide(:title, 'Edit user')

.row
  div.col-md-12.one-col
    h1 Update your profile

    form
      .form-group
        = gravatar_for @user, size: 100, css_class: nil
      .form-group
        = link_to "Change", "http://gravatar.com/emails", class: "btn btn-default"

    = form_with model: @user, local: true do |form|
      = render 'shared/error_messages', object: form.object if form.object.errors.any?

      .form-group
        = form.label :name, class: 'control-label'
        = form.text_field :name, class: 'form-control'

      .form-group
        = form.label :email, class: 'control-label'
        = form.text_field :email, class: 'form-control'

      .form-group
        = form.label :password, class: 'control-label'
        = form.password_field :password, class: 'form-control'

      .form-group
        = form.label :password_confirmation, class: 'control-label'
        = form.password_field :password_confirmation, class: 'form-control'

      .actions
        = form.submit "Save changes", class: "btn btn-large btn-primary"

    = link_to 'Delete my account', @user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger"
